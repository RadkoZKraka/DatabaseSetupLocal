@model DatabaseSetupLocal.Areas.Identity.Data.AppUser

@{
    ViewBag.Title = "Edit App Users";
    Layout = "_Layout";
}

<h2>Edit User</h2>

<div class="container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="row">
            <div class="col">
                <div class="form-horizontal">
                    @Html.ValidationSummary(true)

                    <table class="table">
                        <thead>
                            <tr>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Admin</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    @Html.EditorFor(model => model.FirstName)
                                    @Html.ValidationMessageFor(model => model.FirstName)
                                </td>
                                <td>
                                    @Html.EditorFor(model => model.LastName)
                                    @Html.ValidationMessageFor(model => model.LastName)
                                </td>
                                <td>
                                    @Html.EditorFor(model => model.Admin)
                                    @Html.ValidationMessageFor(model => model.Admin)
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="form-group">
                        <div>
                            <input type="submit" value="Save" class="btn btn-primary" style="width: 50%; margin-left: 25%;" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
