@model List<Race>


@{
    ViewBag.Title = "Races";
    Layout = "_Layout";
}

<h2>@ViewBag.User.UserName</h2>
<h2>@ViewBag.Year</h2>
<h2>Select a race.</h2>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(Model => Model.First().RaceNo)
        </th>
        <th>
            @Html.DisplayNameFor(Model => Model.First().RaceLocation)
        </th>
        <th>
            @Html.DisplayNameFor(Model => Model.First().Rand)
        </th>
        <th>
            @Html.DisplayNameFor(Model => Model.First().PolePosition)
        </th>
        <th>
            @Html.DisplayNameFor(Model => Model.First().Points)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RaceNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RaceLocation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PolePosition)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Points)
            </td>

            <td>
                @Html.ActionLink("Shots", "Shots", new {userId = ViewBag.User.Id, raceId = item.Id, raceLocation = item.RaceLocation}) |
            </td>

        </tr>
    }
</table>