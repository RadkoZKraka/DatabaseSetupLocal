@model DatabaseSetupLocal.Areas.Identity.Data.AppUser

@{
    ViewBag.Title = "Edit App Users";
    Layout = "_Layout";
}
<style>
    /* Dark mode styles */
        .dark-mode body {
            background-color: #202020 !important;
            color: #ffffff !important;
        }
    
        .dark-mode h2 {
            color: #ffffff !important;
        }
    
        .dark-mode th {
            color: #ffffff !important;
        }
    
        .dark-mode td {
            color: #ffffff !important;
        }
    
        .dark-mode .table {
            background-color: #202020 !important;
        }
    
        .dark-mode .btn-primary {
            background-color: #007bff !important;
            border-color: #007bff !important;
        }
    
        .dark-mode .btn-primary:hover {
            background-color: #0069d9 !important;
            border-color: #0062cc !important;
        }
    
        .dark-mode .form-control {
            background-color: #292929 !important;
            color: #ffffff !important;
            border: 1px solid #6c757d !important;
        }
</style>
<h2>Edit User</h2>

<div class="container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="row">
            <div class="col">
                <div class="form-horizontal">
                    @Html.ValidationSummary(true)

                    <table class="table">
                        <thead>
                            <tr>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Admin</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    @Html.EditorFor(model => model.FirstName)
                                    @Html.ValidationMessageFor(model => model.FirstName)
                                </td>
                                <td>
                                    @Html.EditorFor(model => model.LastName)
                                    @Html.ValidationMessageFor(model => model.LastName)
                                </td>
                                <td>
                                    @Html.EditorFor(model => model.Admin)
                                    @Html.ValidationMessageFor(model => model.Admin)
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="form-group">
                        <div>
                            <input type="submit" value="Save" class="btn btn-primary" style="width: 50%; margin-left: 25%;" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
