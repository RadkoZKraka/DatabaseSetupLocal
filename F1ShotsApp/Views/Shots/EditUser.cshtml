@using Microsoft.AspNet.Identity
@model UserShots
<style>
    
</style>
@{
    ViewBag.Title = "Assign User";
    Layout = "_Layout";
    var userId = User.Identity.GetUserId();
}

<h2>Edit Users</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col">
            <div class="form-horizontal">
                @Html.ValidationSummary(true)
                <table class="table">
                    <thead>
                        <tr>
                            <th>User name</th>
                            <th>Owner ID</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                @Html.EditorFor(model => model.UserName)
                                @Html.ValidationMessageFor(model => model.UserName)
                            </td>
                            <td>
                                @Html.TextBoxFor(model => model.OwnerId, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.OwnerId)
                            </td>
                        </tr>
                    </tbody>
                </table>
                <br />
                <table class="table">
                    <thead>
                        <tr>
                            <th>First name</th>
                            <th>Last name</th>
                            <th>User ID</th>
                            <th>Copy</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.UsersList)
                        {
                            <tr>
                                <td>@item.FirstName</td>
                                <td>@item.LastName</td>
                                <td><p id="myLink">@item.Id</p></td>
                                <td><button type="button" onclick="copyToClipboard()" class="btn btn-primary">Copy</button></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="form-group">
                    <div>
                        <input type="submit" value="Save" class="btn btn-primary" style="margin-top: 20px; width: 50%; margin-left: 15%" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<script>
    function copyToClipboard() {
        let linkText = document.getElementById("myLink").innerText;
        let tempInput = document.createElement("input");
        tempInput.value = linkText;
        document.body.appendChild(tempInput);
        tempInput.select();
        document.execCommand("copy");
        document.body.removeChild(tempInput);
    }
</script>
