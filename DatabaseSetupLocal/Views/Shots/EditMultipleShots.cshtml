@model Race

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Edit</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col">
            <div class="form-horizontal" style="display: inline">
                <h4>Shots</h4>
                <hr/>
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.Id)
                <tr>
                    <th>
                        <a>Position</a>
                    </th>
                    <th>
                        @Html.DisplayNameFor(Model => Model.Shot[0].UsersShotDriver)
                    </th>

                </tr>
                <br/>

                @for (var i = 1; i - 1 < Model.Shot.Count; i++)
                {
                    @i

                    @Html.DropDownListFor(model => model.Shot[i - 1].UsersShotDriver, new SelectList(ViewBag.F1Grid), "Select a driver.", new {@id = "ddlId",@class = "form-control"})
                                @* @Html.EditorFor(model => model.Shot[i - 1].UsersShotDriver) *@
                    @Html.ValidationMessageFor(model => model.Shot[i - 1].UsersShotDriver)
                }


                @*Genre and Price removed for brevity.*@
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default"/>
                    </div>
                </div>
            </div>

        </div>
        <div class="col">
            <a> Drivers left</a>
            <script>
                var e = document.getElementById("ddlId");
                var value = e.options[e.selectedIndex].value;
                var text = e.options[e.selectedIndex].text;
                document.write(text);
            </script>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>